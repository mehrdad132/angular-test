                </div>



            </div>*@
            @*<div>
                <input ng-model="value" type="text" id="mySlider1" slider options="options" />
            </div>*@

        </div>
        <table class="table-bordered tab-content table-striped">
            <tr>
              
                <th class="text-center">شماره</th>
                <th class="text-center">نام</th>
                <th class="text-center">فامیلی</th>
                <th class="text-center">سن</th>
                <th class="text-center">عملیات</th>
                </tr>
             
                
                    <tr ng-repeat="p in person | filter:Filter | orderBy:sort">
                        <td class="col-md-3 text-center">{{p.ID}}</td>
                        <td class="col-md-3 text-center">{{p.Name}}</td>
                        <td class="col-md-3 text-center">{{p.Family}}</td>
                        <td class="col-md-3 text-center">{{p.Age}}</td>
                        <td class="col-md-3 text-center"><button class="btn btn-danger" ng-click="DeletePerson(p.ID)">حذف</button></tdclass="col-md-3>
                    </tr>


                </table>
</div>
