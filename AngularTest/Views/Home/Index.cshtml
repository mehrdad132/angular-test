
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;



<link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
<script src="~/scripts/modules/Angular.js"></script>
<script src="~/scripts/modules/PersonModule.js"></script>
<script src="~/scripts/angular-ui/ui-bootstrap-tpls.js"></script>
<script src="~/scripts/jquery-1.10.2.min.js"></script>

<div class="container" ng-app="personModule" ng-controller="personController">
    <h2 class="text-right">لیست کاربران</h2>
    <hr />
    <form>
        <div class="form-horizontal">
            <div class="form-group" name="personForm" novalidate>
                <div class="row">
                    <div class="col-md-2">
                        <label>نام</label>
                    </div>
                    <div class="col-md-4">
                        
                        <input class="form-control" name="Name" type="text" ng-model="Name" ng-required="true" />

                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>نام خانوادگی</label>
                    </div>
                    <div class="col-md-4" name="personForm" novalidate>
                      
                        <input class="form-control" type="text" ng-model="Family" ng-required="true" />

                    </div>

                </div>
                </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>سن</label>
                    </div>
                    <div class="col-md-4" name="personForm" novalidate>
                        
                        <input class="form-control" type="text" ng-model="Age" ng-required="true" />

                    </div>

                </div>
                </div>
            <div class="form-group">

                <div class="col-md-4">
                    <button class="btn btn-success btn-sm" ng-click="SavePerson()">ثبت کاربران</button>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>جستجو بر اساس نام خانوادگی</label>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control ng-anchor ng-cloak" type="text" ng-model="Filter.Family" />
                    </div>
                </div>
                </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>مرتب سازی بر اساس </label>
                    </div>
                    <div class="col-md-4">

                        <select class="form-control" ng-model="sort">
                            <option value="ID">شماره</option>
                            <option value="Name">نام</option>
                            <option value="Family">فامیلی</option>
                            <option value="Age">سن</option>
                        </select>

                    </div>
                </div>
            <br />
